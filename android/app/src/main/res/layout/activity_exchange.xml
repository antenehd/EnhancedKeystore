<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/key_exchange_title"
        android:textSize="22sp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/bt_status_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/key_exchange_bt_status"
        android:paddingLeft="16dp"/>

    <TextView
        android:id="@+id/bt_status_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="@string/key_exchange_bt_status_default"
        android:paddingLeft="16dp"/>

    <Button
        android:id="@+id/bt_connect_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_exchange_connect_btn"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/bt_init_exchange_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/key_exchange_init_btn"
        android:layout_gravity="center"
        android:enabled="false"/>

    <TextView
        android:id="@+id/tv_key_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</LinearLayout>
